<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_layout_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton style="@style/ImageSettingsButton"
            android:id="@+id/back_button"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/settingsreturn_button_description"
            android:src="@drawable/arrow_vector"/>

        <TextView style="@style/SettingsTextStyle"
            android:layout_marginStart="64dp"
            android:text="@string/settings_button"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/ys_display_medium"/>
    </FrameLayout>

    <FrameLayout
        style="@style/SettingFramelayoutStyle"
        android:layout_marginTop="80dp">

        <TextView style="@style/SettingsTextStyle"
            android:text="@string/settings_daynight_string"/>

        <Switch
            style="@style/SwitchSettingsStyle"/>
    </FrameLayout>

    <FrameLayout
        style="@style/SettingFramelayoutStyle">

        <TextView style="@style/SettingsTextStyle"
            android:text="@string/settings_shareapp_string"/>

        <ImageButton style="@style/ImageSettingsButton"
            android:contentDescription="@string/shareapp_button_description"
            android:src="@drawable/shareapp_vector" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingFramelayoutStyle">

        <TextView style="@style/SettingsTextStyle"
            android:text="@string/settings_support_string"/>

        <ImageButton style="@style/ImageSettingsButton"
            android:contentDescription="@string/customer_support_button_description"
            android:src="@drawable/customer_support_vector" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingFramelayoutStyle">

        <TextView style="@style/SettingsTextStyle"
            android:text="@string/user_agreement_string"/>

        <ImageButton style="@style/ImageSettingsButton"
            android:contentDescription="@string/user_agreement_button_description"
            android:src="@drawable/user_agreement_vector" />
    </FrameLayout>

</LinearLayout>