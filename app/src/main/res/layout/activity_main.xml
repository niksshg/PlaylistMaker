<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_layout_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_title"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            style="@style/MainScreenButtonStyle"
            android:text="@string/search_button"
            app:icon="@drawable/search_vector" />

        <Button
            android:id="@+id/media_button"
            style="@style/MainScreenButtonStyle"
            android:layout_marginTop="@dimen/button_top_margin"
            android:text="@string/media_button"
            app:icon="@drawable/media_vector" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainScreenButtonStyle"
            android:layout_marginTop="@dimen/button_top_margin"
            android:text="@string/settings_screen_title"
            app:icon="@drawable/settings_vector" />
    </LinearLayout>

</LinearLayout>
