<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
    </style>

    <style name="SettingFramelayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/settings_menu_padding</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_textsize</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageSettingsButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/settings_button</item>
        <item name="android:layout_height">@dimen/settings_button</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SwitchSettingsStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>

    <style name="ImageNavButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/settings_button</item>
        <item name="android:layout_height">@dimen/settings_button</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@drawable/arrow_vector</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TopNavTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/nav_textsize</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">@dimen/nav_text_leftmargin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="searchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="searchClearButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@null</item>
    </style>
</resources>